{
  "schemaVersion": 1,
  "id": "rules",
  "version": "${version}",

  "name": "Rules",
  "description": "A fabric server mod that creates a highly-configurable /rules command. ",
  "authors": [
    "jadelily18"
  ],
  "contact": {
    "homepage": "https://lilydev.com/",
    "issues": "https://github.com/Lilydev-by-jade/Rules/issues",
    "sources": "https://github.com/Lilydev-by-jade/Rules"
  },

  "license": "LGPL-3.0",

  "environment": "server",
  "entrypoints": {
    "server": [
      {
        "adapter": "kotlin",
        "value": "com.lilydev.rules.RulesServer"
      }
    ]
  },

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.20",
    "java": ">=17",
    "fabric-language-kotlin": "*",
    "lilylib": ">=0.1.0-beta.2"
  }
}
